<div class="box">
	<h2>Sign in:</h2>
	
	<%= form_tag '/sessions/create' do %>
	<p><%= label_tag 'Email: ' %> <%= text_field_tag :email %></p>
	<p><%= label_tag 'Password: ' %><%= password_field_tag :password %></p>
	<div class="input"><%= submit_tag 'Sign In', :class => "button"  %></div>
	<% end %>
	
	<div class="login">
		<h3>or <%= link_to "create an Account", new_user_url %></h3>
	</div>
</div>