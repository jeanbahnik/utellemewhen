<%= form_tag questions_path, :id => "question" do %>
<div class="clearfix">
	<%= label_tag :name, "Event: " %>
	<div class="input">
		<%= text_field_tag :name, nil, data: {autocomplete_source: race_names_path}, :placeholder => 'Name of the event' %>
	</div>
</div>

<% if not user_signed_in?  %>
	<div class="clearfix">
		<%= label_tag :email, "Email: " %>
		<div class="input">
			<%= text_field_tag :email, nil, :placeholder => 'Your email' %>
		</div>
		<% if @user and @user.errors.any? %>
		<div id="error_explanation">
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
	</div>
<% end %>

<div class="tellmewhen">
	<p><%= submit_tag "Submit", :class => "button" %></p>
</div>

<% end %>