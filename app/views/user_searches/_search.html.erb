<%= form_tag user_searches_path, :id => "user_search" do %>
<div class="clearfix">
	<%= label_tag :name, "Race: " %>
	<div class="input">
		<%= text_field_tag :name, nil, data: {autocomplete_source: race_names_path}, :placeholder => 'Enter your race here' %><!-- , params[:name] -->
	</div>
</div>

<% if not logged_in?  %>
	<div class="clearfix">
		<%= label_tag :email, "Email: " %>
		<div class="input">
			<%= text_field_tag :email, nil, :placeholder => 'Enter your email here' %>
		</div>
		<% if @user and @user.errors.any? %>
		<div id="error_explanation">
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<!-- <span class="help-text">Email Required</span> -->
	</div>
<% end %>

<div class="tellmewhen">
	<p><%= submit_tag "Tell Me When", :class => "button" %></p>
</div>

<% end %>