<%= form_tag user_searches_path, :id => "user_search" do %>
<%= label_tag :name, "Race: " %>
<%= text_field_tag :name, nil, :placeholder => 'Enter your race here' %><!-- , params[:name] -->

<% if not logged_in?  %>
	<div id="user-email">
		<%= label_tag :email, "Email: " %>
		<%= text_field_tag :email, nil, :placeholder => 'Enter your email here' %>
		<!-- <span class="help-text">Email Required</span> -->
	</div>
<% end %>
<div class="tellmewhen">
	<p><%= submit_tag "Tell Me When", :class => "button" %></p>
</div>

